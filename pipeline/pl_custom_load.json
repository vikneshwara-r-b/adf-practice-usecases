{
	"name": "pl_custom_load",
	"properties": {
		"activities": [
			{
				"name": "Iterate Over Each Table",
				"type": "ForEach",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@pipeline().parameters.table_list",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "Copy MSSQL Table Data",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "AzureSqlSource",
									"sqlReaderQuery": {
										"value": "SELECT * FROM @{item().tableSchemaName}.@{item().tableName}\nWHERE @{item().Watermark_Column} > '@{formatDateTime(startOfDay(addDays(coalesce(pipeline().parameters.input_date, startOfDay(utcNow())), -7)), 'yyyy-MM-dd')}' AND @{item().Watermark_Column} <= '@{formatDateTime(coalesce(concat(pipeline().parameters.input_date, 'T23:59:59'), utcNow()), 'yyyy-MM-ddTHH:mm:ss')}'",
										"type": "Expression"
									},
									"queryTimeout": "02:00:00",
									"partitionOption": "None"
								},
								"sink": {
									"type": "AzureSqlSink",
									"preCopyScript": {
										"value": "DELETE FROM @{item().tableSchemaName}.@{item().tableName}\nWHERE CAST(@{item().Watermark_Column} AS DATE) > '@{formatDateTime(addDays(coalesce(pipeline().parameters.input_date, utcNow()), -7), 'yyyy-MM-dd')}' AND CAST(@{item().Watermark_Column} AS DATE) <= '@{formatDateTime(coalesce(pipeline().parameters.input_date, utcNow()), 'yyyy-MM-dd')}'",
										"type": "Expression"
									},
									"writeBehavior": "upsert",
									"upsertSettings": {
										"useTempDB": true,
										"keys": [
											"id"
										]
									},
									"sqlWriterUseTableLock": false,
									"disableMetricsCollection": false
								},
								"enableStaging": false,
								"translator": {
									"type": "TabularTranslator",
									"typeConversion": true,
									"typeConversionSettings": {
										"allowDataTruncation": true,
										"treatBooleanAsNumber": false
									}
								}
							},
							"inputs": [
								{
									"referenceName": "ds_copy_data",
									"type": "DatasetReference",
									"parameters": {
										"db_server_name": {
											"value": "@pipeline().globalParameters.sql_source_server_name",
											"type": "Expression"
										},
										"db_user_name": {
											"value": "@pipeline().globalParameters.sql_source_server_username",
											"type": "Expression"
										},
										"db_password_secret_key": {
											"value": "@pipeline().globalParameters.sql_source_server_password_secret_key",
											"type": "Expression"
										},
										"db_name": {
											"value": "@pipeline().globalParameters.sql_source_database_name",
											"type": "Expression"
										},
										"key_vault_url": {
											"value": "@pipeline().globalParameters.key_vault_url",
											"type": "Expression"
										},
										"schema_name": {
											"value": "@item().tableSchemaName",
											"type": "Expression"
										},
										"table_name": {
											"value": "@item().tableName",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "ds_copy_data",
									"type": "DatasetReference",
									"parameters": {
										"db_server_name": {
											"value": "@pipeline().globalParameters.sql_target_server_name",
											"type": "Expression"
										},
										"db_user_name": {
											"value": "@pipeline().globalParameters.sql_target_server_username",
											"type": "Expression"
										},
										"db_password_secret_key": {
											"value": "@pipeline().globalParameters.sql_target_server_password_secret_key",
											"type": "Expression"
										},
										"db_name": {
											"value": "@pipeline().globalParameters.sql_target_database_name",
											"type": "Expression"
										},
										"key_vault_url": {
											"value": "@pipeline().globalParameters.key_vault_url",
											"type": "Expression"
										},
										"schema_name": {
											"value": "@item().tableSchemaName",
											"type": "Expression"
										},
										"table_name": {
											"value": "@item().tableName",
											"type": "Expression"
										}
									}
								}
							]
						}
					]
				}
			}
		],
		"parameters": {
			"table_list": {
				"type": "array",
				"defaultValue": [
					{
						"tableName": "iplteams_last7days",
						"tableSchemaName": "dbo",
						"Watermark_Column": "last_updated"
					}
				]
			},
			"input_date": {
				"type": "string",
				"defaultValue": null
			}
		},
		"folder": {
			"name": "Load_Types"
		},
		"annotations": []
	}
}