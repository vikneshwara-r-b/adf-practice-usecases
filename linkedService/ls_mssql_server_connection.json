{
	"name": "ls_mssql_server_connection",
	"properties": {
		"description": "Used to connect with source or target MSSQL server connection ",
		"parameters": {
			"db_server_name": {
				"type": "String"
			},
			"db_user_name": {
				"type": "String"
			},
			"db_password_secret_key": {
				"type": "String"
			},
			"db_name": {
				"type": "String"
			},
			"key_vault_url": {
				"type": "String"
			}
		},
		"annotations": [],
		"type": "AzureSqlDatabase",
		"typeProperties": {
			"server": "@{linkedService().db_server_name}",
			"database": "@{linkedService().db_name}",
			"encrypt": "optional",
			"trustServerCertificate": false,
			"authenticationType": "SQL",
			"userName": "@{linkedService().db_user_name}",
			"password": {
				"type": "AzureKeyVaultSecret",
				"store": {
					"referenceName": "ls_kv_connection",
					"type": "LinkedServiceReference",
					"parameters": {
						"key_vault_url": {
							"value": "@linkedService().key_vault_url",
							"type": "Expression"
						}
					}
				},
				"secretName": {
					"value": "@linkedService().db_password_secret_key",
					"type": "Expression"
				}
			}
		}
	}
}