{
	"name": "ls_source_mssql_server_connection",
	"properties": {
		"description": "Used for connecting with source MSSQL server",
		"parameters": {
			"sql_server_name": {
				"type": "String"
			},
			"sql-source-admin-username": {
				"type": "String"
			},
			"key_vault_url": {
				"type": "String"
			}
		},
		"annotations": [],
		"type": "AzureSqlDatabase",
		"typeProperties": {
			"server": "@{linkedService().sql_server_name}",
			"database": "sourcedb",
			"encrypt": "optional",
			"trustServerCertificate": false,
			"authenticationType": "SQL",
			"userName": "@{linkedService().sql-source-admin-username}",
			"password": {
				"type": "AzureKeyVaultSecret",
				"store": {
					"referenceName": "ls_kv_connection",
					"type": "LinkedServiceReference",
					"parameters": {
						"key_vault_url": {
							"value": "@linkedService().key_vault_url",
							"type": "Expression"
						}
					}
				},
				"secretName": "sql-source-admin-password"
			}
		}
	}
}